:local
    .abc 
        top 0
        width 20%
        overflow hidden

    .root
        width 100%

    .appBar
        width 100%
        height 24px
        display flex
        justify-content space-between
        align-items center

    .menuButton

    .title
        display flex
        align-items center

    .search
        width 100px
        height 24px
        display flex
        align-items center
        justify-content center
        input 
            border-bottom solid 1px white
            color white
            height 10px

    .sectionMobile
        margin-right 20px

    .searchIcon
        margin-right 5px
        pointer-events none
        display flex
        align-items center
        justify-content center

    .inputRoot
        color inherit

    .inputInput
        padding 5px 5px 5px 50px

    .name
        display flex
        width 120px
        align-items center