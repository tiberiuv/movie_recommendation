:local

    .card
        height auto
        width 250px
        
        &:hover
            cursor pointer
            border 1px solid gray

    .poster
        height auto
        width auto
    .container
        display grid
        grid-template-columns auto auto auto
        grid-template-rows auto auto
        justify-items center
        justify-content space-between
        align-content center
        grid-column-gap 10px
        grid-row-gap 10px

        .card
            margin-bottom 1px